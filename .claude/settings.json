{
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-rebuild.sh",
                        "timeout": 10
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(just check)",
            "Bash(just eval)",
            "Bash(just fmt)",
            "Bash(just fmt-check)",
            "Bash(just diff)",
            "Bash(nix search:*)",
            "Bash(nix flake check)",
            "Bash(nix flake show:*)",
            "Bash(nixfmt:*)",
            "Bash(nvd diff:*)"
        ]
    }
}
